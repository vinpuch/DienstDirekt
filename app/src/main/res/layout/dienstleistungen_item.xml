<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <FrameLayout
        android:id="@+id/dienstleistungenFrame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_corner_dienstleistungen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/unternehmenBild"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/rounded_corner_button"
            android:backgroundTint="#D9D9D9" />

        <TextView
            android:id="@+id/unternehmenName"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Fix und Fertig GmbH" />

        <TextView
            android:id="@+id/unternehmenBeschreibung"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="135dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:textSize="10sp"
            tools:text="Wir sind seit 3 Jahren zertifizierte Handwerker mit qualitativen Reparaturservices..." />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
