<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/dienstleistungenFrame"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_corner_dienstleistungen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/unternehmenBild"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:layout_gravity="start|center_vertical"
                android:background="@drawable/rounded_corner_button"
                android:backgroundTint="@color/greenery" />

            <TextView
                android:id="@+id/unternehmenName"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="140dp"
                android:layout_marginTop="20dp"
                android:text="Fix und Fertig GmbH"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <TextView
            android:id="@+id/unternehmenBeschreibung"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="30dp"
            android:text="Wir sind seit 3 Jahren zertifizierte Handwerker mit qualitativen Reparaturservices..."
            android:textColor="@color/black"
            android:textSize="10sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/dienstleistungenFrame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/dienstleistungen_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
