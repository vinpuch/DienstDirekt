<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterActivity" >

    <EditText
        android:id="@+id/textUnternehmenname"
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/rounded_corner"
        android:inputType="text"
        android:padding="8dp"
        android:textAlignment="viewStart"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="260dp"
        android:background="@color/white"
        android:text="Unternehmensname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textHandynummer"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/rounded_corner"
        android:inputType="text|number"
        android:padding="8dp"
        android:textAlignment="viewStart"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textPasswort"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/rounded_corner"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textAlignment="viewStart"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/key_20dp_fill0_wght400_grad0_opsz20" />

    <EditText
        android:id="@+id/textPasswortNochmal"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/rounded_corner"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textAlignment="viewStart"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="324dp"
        android:background="@color/white"
        android:text="Passwort"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="27dp"
        android:layout_height="28dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/call_20dp_fill0_wght400_grad0_opsz20" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="288dp"
        android:background="@color/white"
        android:text="Handynummer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="436dp"
        android:layout_marginEnd="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/key_20dp_fill0_wght400_grad0_opsz20" />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/rounded_corner"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textAlignment="viewStart"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mail_20dp_fill0_wght400_grad0_opsz20" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="344dp"
        android:background="@color/white"
        android:text="E-Mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="354dp"
        android:layout_height="54dp"
        android:background="@color/ic_launcher_background"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Registrieren"
        app:titleCentered="false"
        app:titleTextColor="#000000" />

    <ImageButton
        android:id="@+id/buttonPage2"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/rounded_corner_button"
        android:backgroundTint="#6FB98F"
        android:contentDescription="@string/button_description"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        app:backgroundTint="#6FB98F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person_20dp_fill0_wght400_grad0_opsz20" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="416dp"
        android:layout_marginEnd="244dp"
        android:background="@color/white"
        android:text="Passwort wiederholen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="42dp"
        android:layout_height="35dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrorw" />

</androidx.constraintlayout.widget.ConstraintLayout>

